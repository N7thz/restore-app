generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  name          String    @unique
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @default(now()) @updatedAt @map("updated_at")
  password      String?
  image         String?
  banned        Boolean?  @default(false)
  banReason     String?
  banExpires    DateTime?
  role          String?
  sessions      Session[]
  accounts      Account[]

  @@map("users")
}

model ProductEntry {
  id        String   @id @default(uuid())
  price     Float
  quantity  Int
  createdAt DateTime @default(now()) @map("created_at")
  productId String   @map("product_id")
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("products_entry")
}

model Product {
  id           String         @id @default(uuid())
  name         String         @unique
  imageUrl     String         @map("image_url")
  quantity     Int            @default(1)
  minQuantity  Int            @default(1) @map("min_quantity")
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")
  description  String?
  productExit  ProductExit[]
  productEntry ProductEntry[]

  @@map("products")
}

model ProductExit {
  id          String   @id @default(uuid())
  name        String
  region      String
  quantity    Int
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  description String?
  productId   String   @map("product_id")
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@map("products_exit")
}

model Notification {
  id          String   @id @default(uuid())
  name        String
  createdAt   DateTime @map("created_at")
  read        Boolean  @default(false)
  description String?
  action      Action

  @@map("notifications")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  impersonatedBy String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Update {
  id          String   @id @default(uuid())
  title       String
  content     String
  createdAt   DateTime @default(now()) @map("created_at")
  description String?

  @@map("updates")
}

enum Action {
  CREATE
  UPDATE
  DELETE
  MIN_QUANTITY
}

enum Role {
  ADMIN
  USER
}
